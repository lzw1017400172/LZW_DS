<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lzw.item.mapper.TbSpecificationMapper">



	<select id="selectPageByMap" resultType="com.lzw.item.pojo.TbSpecification">
		select * from tb_specification
		<where>
			<if test="cm.keyword != null and cm.keyword != ''">
				and (
					or category_id like CONCAT('%',#{cm.keyword},'%')
					or specifications like CONCAT('%',#{cm.keyword},'%')
				)
			</if>
        </where>
	</select>
</mapper>
